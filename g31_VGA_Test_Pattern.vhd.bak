LIBRARY ieee;
USE ieee.std_logic_1164.all;
use ieee.numeric_std.all;
LIBRARY lpm;
USE lpm.lpm_components.all;

ENTITY g31_VGA_TEST_PATTERN IS
	PORT (
		CLOCK    : IN  STD_LOGIC; -- 50MHz
		RST      : IN  STD_LOGIC; -- reset
		R, G, B  : OUT STD_LOGIC_VECTOR (3 DOWNTO 0);
		HSYNC    : OUT STD_LOGIC; -- horizontal sync signal
		VSYNC    : OUT STD_LOGIC -- vertical sync signal
	);
END g31_VGA_TEST_PATTERN;

ARCHITECTURE bdf_type OF g31_VGA_TEST_PATTERN IS

SIGNAL COLUMN : UNSIGNED(9 DOWNTO 0);
COMPONENT g31_VGA
	 PORT (
		CLOCK    : IN  STD_LOGIC; -- 50MHz
		RST      : IN  STD_LOGIC; -- reset
		BLANKING : OUT STD_LOGIC; -- blank display when zero
		ROW      : OUT UNSIGNED(9 DOWNTO 0); -- line 0 to 599
		COLUMN   : OUT UNSIGNED(9 DOWNTO 0); -- column 0 to 799
		HSYNC    : OUT STD_LOGIC; -- horizontal sync signal
		VSYNC    : OUT STD_LOGIC -- vertical sync signal
	);
END COMPONENT;

BEGIN
VGA1: g31_VGA port map (CLOCK => CLOCK, RST => RST, HSYNC => HSYNC, VSYNC => VSYNC, COLUMN => COLUMN);

R <= 
		"1111" when (COL_SEL >= TO_UNSIGNED(0,10)   AND COL_SEL <= TO_UNSIGNED(99,10))  else
		"1111" when (COL_SEL >= TO_UNSIGNED(100,10) AND COL_SEL <= TO_UNSIGNED(199,10)) else
		"0000" when (COL_SEL >= TO_UNSIGNED(200,10) AND COL_SEL <= TO_UNSIGNED(299,10)) else
		"0000" when (COL_SEL >= TO_UNSIGNED(300,10) AND COL_SEL <= TO_UNSIGNED(399,10)) else	
		"1111" when (COL_SEL >= TO_UNSIGNED(400,10) AND COL_SEL <= TO_UNSIGNED(499,10)) else
		"1111" when (COL_SEL >= TO_UNSIGNED(500,10) AND COL_SEL <= TO_UNSIGNED(599,10)) else
		"0000" when (COL_SEL >= TO_UNSIGNED(600,10) AND COL_SEL <= TO_UNSIGNED(699,10)) else
		"0000";
		
G <= 
		"1111" when (COL_SEL >= TO_UNSIGNED(0,10)   AND COL_SEL <= TO_UNSIGNED(99,10))  else
		"1111" when (COL_SEL >= TO_UNSIGNED(100,10) AND COL_SEL <= TO_UNSIGNED(199,10)) else
		"1111" when (COL_SEL >= TO_UNSIGNED(200,10) AND COL_SEL <= TO_UNSIGNED(299,10)) else
		"1111" when (COL_SEL >= TO_UNSIGNED(300,10) AND COL_SEL <= TO_UNSIGNED(399,10)) else	
		"0000" when (COL_SEL >= TO_UNSIGNED(400,10) AND COL_SEL <= TO_UNSIGNED(499,10)) else
		"0000" when (COL_SEL >= TO_UNSIGNED(500,10) AND COL_SEL <= TO_UNSIGNED(599,10)) else
		"0000" when (COL_SEL >= TO_UNSIGNED(600,10) AND COL_SEL <= TO_UNSIGNED(699,10)) else
		"0000";
		
B <= 
		"1111" when (COL_SEL >= TO_UNSIGNED(0,10)   AND COL_SEL <= TO_UNSIGNED(99,10))  else
		"0000" when (COL_SEL >= TO_UNSIGNED(100,10) AND COL_SEL <= TO_UNSIGNED(199,10)) else
		"1111" when (COL_SEL >= TO_UNSIGNED(200,10) AND COL_SEL <= TO_UNSIGNED(299,10)) else
		"0000" when (COL_SEL >= TO_UNSIGNED(300,10) AND COL_SEL <= TO_UNSIGNED(399,10)) else	
		"1111" when (COL_SEL >= TO_UNSIGNED(400,10) AND COL_SEL <= TO_UNSIGNED(499,10)) else
		"0000" when (COL_SEL >= TO_UNSIGNED(500,10) AND COL_SEL <= TO_UNSIGNED(599,10)) else
		"1111" when (COL_SEL >= TO_UNSIGNED(600,10) AND COL_SEL <= TO_UNSIGNED(699,10)) else
		"0000";

END bdf_type;

